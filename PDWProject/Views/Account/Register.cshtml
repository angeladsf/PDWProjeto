<div class="content">
    <div class="main">
        <div class="container">
            <div class="register">
                <form action="VerifyRegister" method="post">
                    <div class="register-top-grid">
                        <h3>INFORMAÇÃO PESSOAL</h3>
                        <div class="wow fadeInLeft" data-wow-delay="0.4s">
                            <span>Nome Completo<label>*</label></span>
                            <input type="text" name="Username" placeholder="O Teu Nome Completo" required="required" maxlength="200"/>
                        </div>
                        <div class="wow fadeInRight" data-wow-delay="0.4s">
                            <span>Morada Completa<label>*</label></span>
                            <input type="text" name="Address" placeholder="A Tua Morada Completa" required="required" maxlength="200" />
                        </div>
                        <div class="clearfix"> </div>
                        <a class="news-letter" href="#">
                            <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Inscrever na Newsletter</label>
                        </a>
                    </div>
                    <div class="register-bottom-grid">
                        <h3>INFORMAÇÃO DA SESSÃO</h3>
                        <div class="wow fadeInLeft" data-wow-delay="0.4s">
                            <input type="password" name="Password" placeholder="Escreve uma Password" required="required" id="myInput" min="8" max= " 16" />
                        </div>
                        <div class="wow fadeInRight" data-wow-delay="0.4s">
                            <input type="email" name="Email" placeholder="Escreve o teu Email" required="required" max= " 50" />
                        </div>
                        <div>
                            <input id="check3" name="check3" type="checkbox" value="show password" onclick="myFunction()">
                            <label class="check" for="check3">Mostrar password</label>
                        </div>
                        <div class="clearfix">
                            <a class ="forgot" href="/Account/Login">Já tens conta? Entra</a>
                        </div>
                    </div>
                    <div class="clearfix"> </div>
                    <div class="login-right">
                        <input type="submit" value="Registar"></div>
                        <div class="clearfix"> </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function myFunction() {
        var x = document.getElementById("myInput");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>
